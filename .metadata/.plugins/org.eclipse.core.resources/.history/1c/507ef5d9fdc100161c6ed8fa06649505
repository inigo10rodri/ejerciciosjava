import processing.core.PApplet;

public class PingPong extends PApplet {
	//Variables
	int x;
	int y;
	int vx;
	int vy;
	
	//Metodos
	public void settings(){
		size(450,450);
		x=100;
		y=100;
		vx=3;
		vy=3;
	}
	public void draw(){
		background(0,0,0);
		ellipse(x,y,45,45);
		x=x+vx;
		y=y+vy;
		//y=y-3;
		if(x>width || x<0){
			vx=vx*-1;
		}
		if(y>height || y<0){
			vy=vy*-1;
		}
		
	}
	
public static void main(String[] args) {
		
		PApplet.main("PingPong");
}
}
