import java.util.Scanner;
public class Ejercicio3 {

	public static void main(String[] args) {
		//Iniciar scanner
		Scanner sc=new Scanner(System.in);
		//variables
		double nota;
		double menor;
		double mayor;
		int cont=0;
		double suma=0;
		double notaMedia=0;
		for(int i=1;nota<=10;i++){
			//Introduce una nota
			System.out.print("Introducir nota: ");
			//Leer nota
			nota=sc.nextDouble();
			if(nota>10){
				System.out.println("Introduce un numero entre 0 y 10");
			}//if
			else if (nota>=0 && nota<=10){
				suma=nota+suma;
				notaMedia=suma/cont;				
			}
			
			
		}		
		/*System.out.print("Mejor nota: "+mayor);
		System.out.print("Peor nota: "+menor);
		System.out.print("Nota media: "+(notaMedia=suma/cont));*/
	}//main
}//class