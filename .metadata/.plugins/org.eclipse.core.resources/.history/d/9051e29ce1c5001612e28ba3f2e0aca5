import java.util.Scanner;

/*Realizar un programa que pregunte al usuario el momento del día con una letra 
(m-mañana, t-tarde, n-noche), el sexo con otra letra (m-masculino, f-femenino). El
programa dirá: buenos días, tardes, o noches (según el momento) señor o señora
según el sexo.*/
public class Ejercicio5 {

	public static void main(String[] args) {
		//Variables
		String momentodelDia;
		String sexo;
		String txtMomento = "";
		String txtSexo="";
		//Iniciar scanner
		Scanner sc=new Scanner(System.in);
		//Pedir momento del  dia
		System.out.print("Introduce el momento del dia: ");
		momentodelDia=sc.nextLine();
		//Pedir sexo
		System.out.print("Introduce tu sexo: ");
		sexo=sc.nextLine();
		switch(momentodelDia){
		case "m":
			txtMomento="mañana";
			if(sexo.equals("m")){
				System.out.print("Buenos dias señor!");
			}else{
				System.out.print("Buenos dias señora!");
			}
			break;
		case "t":
			txtMomento="tarde";
			if(sexo.equals("m")){
				System.out.print("Buenas tardes señor!");
			}else{
				System.out.print("Buenas tardes señora!");
			}
			break;
		case "n":
			txtMomento="noche";
			if(sexo.equals("m")){
				System.out.print("Buenas noches señor!");
			}else{
				System.out.print("Buenas noches señora!");
			}
			break;
		}
	}

}
