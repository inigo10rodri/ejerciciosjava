import java.util.Scanner;

/*Realizar un programa que pida las notas de 10 alumnos por pantalla y muestre un
menú de opciones: 1. Listar notas, 2.Calcular la media, 3.Calcular el menor, calcular
el mayor.*/ 
public class Ejercicio7 {

	public static void main(String[] args) {
		//Variables
		double nota;
		int cont = 0;
		double suma = 0;
		int Menu;
		String txtMenu;
		//Iniciar scanenr
		Scanner sc=new Scanner(System.in);
		for(int i=0 ; i<10 ; i++){
			System.out.print("Introduce una nota "+i+":");
			nota=sc.nextDouble();
			cont++;
			suma=suma+i;
		}
		System.out.println("Menú de opciones: ");
		Menu=sc.nextInt();
		switch(Menu){
			case 1: txtMenu="-->1.Listar notas";
			for(int i=0;i<10;i++){
				System.out.println(i);
			}
						
		}
		System.out.print("-->1.Listar notas\n) -->2.Calcular la media\n -->3.Calcular el menor -->4.Calcular el mayor\n");

	}

}
