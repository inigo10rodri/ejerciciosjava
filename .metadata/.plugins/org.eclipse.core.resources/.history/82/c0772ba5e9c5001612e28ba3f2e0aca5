import java.util.Scanner;

/*Realizar un programa que pida las notas de 10 alumnos por pantalla y muestre un
menú de opciones: 1. Listar notas, 2.Calcular la media, 3.Calcular el menor, calcular
el mayor.*/ 
public class Ejercicio7 {

	public static void main(String[] args) {
		//Variables
		int notaMenor=10;
		int notaMayor=0;
		double nota = 0;
		int cont = 0;
		double suma = 0;
		int Menu;
		String txtMenu="";
		double media;
		//Iniciar scanenr
		Scanner sc=new Scanner(System.in);
		if(nota>=0 && nota<=10){
			for(int i=0 ; i<10 ; i++){
				System.out.print("Introduce una nota "+i+":");
				nota=sc.nextDouble();
				suma=suma+i;
				cont++;
			}
			System.out.println("Menú de opciones:\n -->1.Listar notas\n -->2.Calcular la media\n -->3.Calcular el menor\n -->4.Calcular el mayor");
			Menu=sc.nextInt();
			switch(Menu){
				case 1:
					for(int i=0 ; i<10 ; i++){
						System.out.println(i);
					}
				break;			
				case 2: 
					media=suma/cont;
					System.out.print("La media es: "+media);
				break;
				case 3: 				
					if(nota<notaMenor){
						notaMenor=(int) nota;
					}//if
				break;
				case 4:
					if(nota>notaMayor){
						notaMayor=(int) nota;
					}//if
				break;
			}//switch
			System.out.print(txtMenu);
		}//if
	}

}
