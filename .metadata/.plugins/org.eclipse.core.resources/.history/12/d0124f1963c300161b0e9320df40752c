import processing.core.PApplet;

public class PingPong extends PApplet {
	//Variables
		int x;
		int y;
		int vx;
		int vy;
		int yb1;
		int yb2;
		
	//Metodos
	public void settings(){
		size(690,600);
		x=100;
		y=100;
		vx=3;
		vy=3;
	}
	public void draw(){
		background(0,0,0);
		noStroke();
		fill(0,255,0);
		ellipse(x,y,45,45);
		fill(0,0,255);
		rect(10,yb1,30,180);
		rect(width-40,yb2,30,180);
		x=x+vx;
		y=y+vy;
		/*if(x<40 && y>yb1 && y<yb1+180){
			vx=vx*-1;
		}
		if(x<width-40 && y>yb2 && y<yb2+180){
			vx=vx*-1;
		}*/
		if(x>width || x<0){
			vx=vx*-1;
		}
		if(y>height || y<0){
			vy=vy*-1;
		}	
		
	}
	public void keyPressed(){
		if(key=='s'){
			yb1=yb1+10;
		}
		if(key=='w'){
			yb1=yb1-10;
		}
		if(keyCode==DOWN){
			yb2=yb2+10;
		}
		if(keyCode==UP){
			yb2=yb2-10;
		}
	}
	
public static void main(String[] args) {
		
		PApplet.main("PingPong");
}
}
