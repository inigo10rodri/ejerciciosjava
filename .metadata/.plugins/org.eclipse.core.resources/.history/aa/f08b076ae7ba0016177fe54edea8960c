import processing.core.PApplet;

public class Escenario extends PApplet {
	int x = 0;
	int y = 0;
	int xa = 1;
	int ya = 1;
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		PApplet.main("Escenario");
	}
	//Tamaño de la ventana
	public void settings(){
		size(300,300);
	    }
	//Inicializacion de las cosas
	public void setup(){
		fill(120,50,240);
	    }
	//Se ejecuta infinitamente
	public void draw(){
		background(120);
		noStroke();
		ellipse(x,100,50,50);
	
		if(x!=275){
			x=x+1;
		}
		if(x==275){
			x=x-1;
		}		
	}
	public void move(){
		if (x + xa < 0)
			xa = 1;
		if (x + xa > frame.getWidth() - 30)
			xa = -1;
		if (y + ya < 0)
			ya = 1;
		if (y + ya > frame.getHeight() - 30)
			ya = -1;

		x = x + xa;
		y = y + ya;
		
	}
}
